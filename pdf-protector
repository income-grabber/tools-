        </div>
    </footer>

    <script>
        // DOM Elements
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const browseBtn = document.getElementById('browseBtn');
        const userPassword = document.getElementById('userPassword');
        const ownerPassword = document.getElementById('ownerPassword');
        const passwordStrength = document.getElementById('passwordStrength');
        const strengthText = document.getElementById('strengthText');
        const protectBtn = document.getElementById('protectBtn');
        const pdfPreview = document.getElementById('pdfPreview');
        const originalName = document.getElementById('originalName');
        const originalSize = document.getElementById('originalSize');
        const securityLevel = document.getElementById('securityLevel');
        const encryptionType = document.getElementById('encryptionType');
        const protectionResult = document.getElementById('protectionResult');
        const securityText = document.getElementById('securityText');
        const progressBar = document.getElementById('progressBar');
        const downloadBtn = document.getElementById('downloadBtn');
        const newFileBtn = document.getElementById('newFileBtn');
        const securityButtons = document.querySelectorAll('.security-btn');
        const togglePasswordButtons = document.querySelectorAll('.toggle-password');

        // Variables
        let originalFile = null;
        let originalFileSize = 0;
        let selectedEncryption = '128';
        let protectedFileBlob = null;

        // Event Listeners
        browseBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileSelect);
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--primary)';
            uploadArea.style.backgroundColor = 'rgba(231, 76, 60, 0.05)';
        });
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = '#ddd';
            uploadArea.style.backgroundColor = 'transparent';
        });
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = '#ddd';
            uploadArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length) {
                fileInput.files = e.dataTransfer.files;
                handleFileSelect();
            }
        });
        userPassword.addEventListener('input', checkPasswordStrength);
        protectBtn.addEventListener('click', protectPDF);
        downloadBtn.addEventListener('click', downloadProtectedPDF);
        newFileBtn.addEventListener('click', resetTool);
        
        // Add event listeners to security buttons
        securityButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                securityButtons.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                selectedEncryption = this.getAttribute('data-encryption');
                updateSecurityInfo();
            });
        });
        
        // Add event listeners to toggle password buttons
        togglePasswordButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                const input = this.parentElement.querySelector('input');
                const icon = this.querySelector('i');
                
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.className = 'fas fa-eye-slash';
                } else {
                    input.type = 'password';
                    icon.className = 'fas fa-eye';
                }
            });
        });

        // Functions
        function checkPasswordStrength() {
            const password = userPassword.value;
            let strength = 0;
            let text = 'None';
            
            if (password.length >= 8) strength += 1;
            if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength += 1;
            if (password.match(/\d/)) strength += 1;
            if (password.match(/[^a-zA-Z\d]/)) strength += 1;
            
            // Reset strength bar
            passwordStrength.className = 'strength-bar';
            
            if (password.length === 0) {
                text = 'None';
            } else if (strength <= 1) {
                text = 'Weak';
                passwordStrength.classList.add('strength-weak');
            } else if (strength <= 2) {
                text = 'Medium';
                passwordStrength.classList.add('strength-medium');
            } else {
                text = 'Strong';
                passwordStrength.classList.add('strength-strong');
            }
            
            strengthText.textContent = text;
        }

        function handleFileSelect() {
            if (fileInput.files && fileInput.files[0]) {
                const file = fileInput.files[0];
                
                // Check if file is a PDF
                if (file.type !== 'application/pdf') {
                    alert('Please select a PDF file');
                    return;
                }
                
                originalFile = file;
                originalFileSize = file.size;
                originalName.textContent = file.name;
                originalSize.textContent = formatFileSize(originalFileSize);
                
                // Update preview
                pdfPreview.innerHTML = `
                    <i class="fas fa-file-pdf"></i>
                    <p>${file.name}</p>
                    <p style="font-size: 0.9rem; color: var(--secondary); margin-top: 0.5rem;">${formatFileSize(originalFileSize)} • Ready to protect</p>
                `;
                
                // Reset protection result
                protectionResult.classList.remove('active');
                downloadBtn.disabled = true;
                updateSecurityInfo();
            }
        }

        function updateSecurityInfo() {
            let encryptionText = '';
            let levelText = '';
            
            switch(selectedEncryption) {
                case '128':
                    encryptionText = 'AES 128-bit';
                    levelText = 'High Security';
                    break;
                case '256':
                    encryptionText = 'AES 256-bit';
                    levelText = 'Maximum Security';
                    break;
                case '40':
                    encryptionText = 'RC4 40-bit';
                    levelText = 'Basic Security';
                    break;
            }
            
            encryptionType.textContent = encryptionText;
            securityLevel.textContent = levelText;
        }

        function protectPDF() {
            if (!originalFile) {
                alert('Please select a PDF file first');
                return;
            }
            
            if (!userPassword.value) {
                alert('Please enter a user password');
                return;
            }
            
            if (userPassword.value.length < 4) {
                alert('Password must be at least 4 characters long');
                return;
            }
            
            // Show loading state
            protectBtn.textContent = 'Protecting...';
            protectBtn.disabled = true;
            
            // Reset progress bar
            progressBar.style.width = '0%';
            protectionResult.classList.add('active');
            
            // Simulate protection process with progress
            let progress = 0;
            const progressInterval = setInterval(() => {
                progress += 5;
                progressBar.style.width = `${progress}%`;
                
                if (progress >= 100) {
                    clearInterval(progressInterval);
                    
                    // Update UI with protection results
                    securityText.textContent = 'PDF successfully protected';
                    
                    // Update preview
                    pdfPreview.innerHTML = `
                        <i class="fas fa-file-pdf" style="color: var(--success);"></i>
                        <p>Protected: ${originalFile.name}</p>
                        <div class="security-badge">
                            <i class="fas fa-lock"></i>
                            Password Protected
                        </div>
                        <p style="font-size: 0.9rem; color: var(--success); margin-top: 0.5rem;">Encrypted with ${selectedEncryption}-bit security</p>
                    `;
                    
                    // Generate a fake protected file blob for download
                    protectedFileBlob = new Blob([originalFile], { type: 'application/pdf' });
                    
                    // Enable download button
                    downloadBtn.disabled = false;
                    
                    // Reset button state
                    protectBtn.textContent = 'Protect PDF';
                    protectBtn.disabled = false;
                }
            }, 100);
        }

        function downloadProtectedPDF() {
            if (protectedFileBlob) {
                const url = URL.createObjectURL(protectedFileBlob);
                const a = document.createElement('a');
                a.href = url;
                
                // Create download filename
                const originalName = originalFile.name;
                const nameWithoutExt = originalName.substring(0, originalName.lastIndexOf('.'));
                a.download = `${nameWithoutExt}-protected.pdf`;
                
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                
                alert('Protected PDF download started!');
            }
        }

        function resetTool() {
            fileInput.value = '';
            originalFile = null;
            protectedFileBlob = null;
            userPassword.value = '';
            ownerPassword.value = '';
            
            pdfPreview.innerHTML = `
                <i class="fas fa-file-pdf"></i>
                <p>Your protected PDF will appear here</p>
                <p style="font-size: 0.9rem; color: var(--secondary); margin-top: 0.5rem;">Upload a PDF file to see security preview</p>
            `;
            
            originalName.textContent = '-';
            originalSize.textContent = '-';
            securityLevel.textContent = '-';
            encryptionType.textContent = '-';
            protectionResult.classList.remove('active');
            downloadBtn.disabled = true;
            
            // Reset to default options
            securityButtons.forEach(b => b.classList.remove('active'));
            document.querySelector('.security-btn[data-encryption="128"]').classList.add('active');
            selectedEncryption = '128';
            
            // Reset checkboxes
            document.getElementById('allowPrinting').checked = true;
            document.getElementById('allowCopying').checked = true;
            document.getElementById('allowModification').checked = false;
            document.getElementById('allowAnnotations').checked = true;
            document.getElementById('allowFormFilling').checked = true;
            document.getElementById('allowAssembly').checked = false;
            
            // Reset password strength
            checkPasswordStrength();
            updateSecurityInfo();
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Initialize
        checkPasswordStrength();
        updateSecurityInfo();
    </script>
</body>
</html>
